<!--pages/setting/settings.wxml-->
<view class="main-view">
  <view>
    <view class="seed-container-view">
      <text class="seed-label">种子设定:</text>
      <view wx:if="{{!seed_flag}}" class="seed-btn-view">
        <button bindtap="onPageBtn" id="0">设置</button>
      </view>
      <view wx:else class="seed-btn-view">
        <button bindtap="onPageBtn" id="1">重设</button>
        <button bindtap="onDeleteSeedBtn">删除</button>
      </view>
    </view>
  </view>
  <view class="time-container-view">
    <text class="time-label">密码的间隔(min):</text>
    <button class="time-number" bindtap="onPageBtn" id="2">{{time_span}}</button>
  </view>

  <!--dialog-->
  <view class="modal-mask" bindtap="preventTouch" catchtouchmove="preventTouchMove" wx:if="{{showModal}}"></view>
  <view class="modal-dialog" wx:if="{{showModal}}">
    <view class="modal-title">{{modalDialog[showModalId].title}}</view>
    <view class="modal-content">
      <view class="modal-input">
        <block wx:for="{{modalDialog[showModalId].inputHolder}}" wx:for-item="item" wx:for-index="idx">
          <input placeholder-class="input-holder" class="input" placeholder="{{item}}" password="{{modalDialog[showModalId].password[idx]}}"></input>
        </block>
      </view>

    </view>
    <view class="modal-footer">
      <view class="btn-cancel" bindtap="onBtnCancel" data-status="cancel">取消</view>
      <view class="btn-confirm" bindtap="onBtnConfirm" data-status="confirm">确定</view>
    </view>
  </view>
</view>